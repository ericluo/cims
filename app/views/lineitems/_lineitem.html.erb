<fieldset>
  <ol>
    <li>
      <label for="product">设备名称</label>
      <%= collection_select "category", "category_id", Category.all, :id, :name,\
                                   {:prompt => "请选择设备类别"} %>
      <select id="product_brand" name="product[brand]">
        <option value="">请选择设备品牌</option> 
      </select>
      <select id="product_mode" name="product[mode]">
        <option value="">请选择设备型号</option>
      </select>
      <label for="quantity">采购数量</label>
      <input id="quantity" name="quantity" type="input"/>
      <%=link_to "购买", new_line_item_path %>
    </li>
  </ol>
</fieldset>


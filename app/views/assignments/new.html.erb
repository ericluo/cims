<h1>设备分配</h1>

<% form_for([@equipment, @assignment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "分配日期:" %>
    <%= f.text_field :assign_date %><br/>
    <%= f.label "使 用 人:" %>
    <%= f.text_field :owner %><br/>
    <%= f.label "备注信息:" %>
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>


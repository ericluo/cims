%h3 修改任务
- form_for(@issue) do |f|
  = f.error_messages
  %div
  = f.label "任务"
  = f.text_field :subject
  %div
  = f.label "备注"
  = f.text_area :description
  %div
  = f.label "状态"
  = f.collection_select :status_id, IssueStatus.all, :id, :name
  %div
  = f.label "优先级"
  = f.collection_select :priority_id, IssuePriority.all, :id, :name
  %div
  = f.label "申请人"
  = f.collection_select :applicant_id, Staff.all, :id, :name
  .action
    = f.submit '确定' 
    %input(type="reset" value="取消")

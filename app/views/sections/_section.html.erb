<div id=<%= "section_#{section.id}" %>>
  <div class="section-group-header">
    <span><%= section.name %></span>
    <span><%= link_to "删除部门", section_path(section), :method => :delete %></span>
    <span><%= link_to "修改部门" %></span>
    <span><%= link_to "添加用户", new_section_staff_path(section) %></span>
  </div>
  <div class="section-group-content">
    <table>
      <%= render :partial => 'sections/staff', :collection => section.staffs %>
    </table>
  </div>
</div>

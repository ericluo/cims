%div{id: 'section_#{section.id}'}
  .section-group-header
    %span
      = section.name
    %span
      = link_to '删除部门', section_path(section), :method => :delete
    %span
      = link_to '修改部门'
    %span
      = link_to '添加用户', new_section_staff_path(section)
  .section-group-content
    %table
      = render :partial => 'sections/staff', :collection => section.staffs

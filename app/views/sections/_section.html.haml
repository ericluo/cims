.section{id: "section_#{section.id}"}
  .section-header
    %span.prepend-1= section.name
  .section-content
    - if section.staffs.size > 0
      %table
        %tr
          %th 姓名
          %th 账号名称
          %th 房间号
          %th 电话
        = render :partial => 'sections/staff', :collection => section.staffs
    %span.prepend-10= link_to '删除部门', section_path(section), :method => :delete
    %span= link_to '修改部门'
    %span= link_to '添加用户', new_section_staff_path(section)

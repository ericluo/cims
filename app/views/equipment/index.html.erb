<h1>设备列表</h1>

<table>
  <tr><th>设备编号</th><th>设备类别</th><th>设备品牌</th><th>型号</th><th>购买日期</th>
    <th>单价</th><th>使用人</th><th>操作</th><th>设备分配</th></tr>

  <% @equipment.each do |item| %>
    <tr>
      <td><%=h item.code %></td>
      <td><%=h item.category.name %></td>
      <td><%=h item.brand %></td>
      <td><%=h item.model %></td>
      <td><%=h item.buy_date %></td>
      <td><%=h item.price %></td>
      <td><%=h item.owner.name unless item.owner.nil? %></td>
      <td>
        <%= link_to "编辑", edit_equipment_instance_path(item) %>
        <%= link_to "删除", equipment_instance_path(item), 
          :confirm => "确定吗?", :method => :delete %>
      </td>
        <td><button type="button" id="assignment">分配</button</td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to "新增设备", new_equipment_instance_path%>

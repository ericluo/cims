<% form_for @equipment do |f| %>

  <div class="row">
    <span class="label"><%= f.label :code, "设备编号" %></span>
    <span class="data"><%= f.text_field :code, :value => @equipment.code -%></span>
    <span class="error"><%= f.error_message_on :code -%></span>
  </div>
  <div class="row">
    <span class="label"><%= f.label :category_id, "设备类别" %></span>
    <span class="data"><%= f.collection_select :category_id, Category.all, :id, :name %></span>
  </div>
  <div class="row">
    <span class="label"><%= f.label :brand, "设备品牌" %></span>
    <span class="data"><%= f.text_field :brand %></span>
  </div>
  <div class="row">
    <span class="label"><%= f.label :model, "设备型号" %> </span>
    <span class="data"><%= f.text_field :model %></span>
  </div>
  <div class="row">
    <span class="label"><%= f.label :buy_date, "采购日期" %></span>
    <span class="data"><%= f.text_field :buy_date %></span>
  </div>
  <div class="row">
    <span class="label"><%= f.label :price, "采购价格" %></span>
    <span class="data"><%= f.text_field :price %></span>
  </div>

  <div style="align: right">
    <%= f.submit "保存" %>
    <%= link_to "返回", equipment_path %>
  </div>
<% end %>
